#!/usr/bin/env sh
#
# setup passwords and pgp keys

# gpg keys
cd ~/
gpg --export -a "Bennett" > public.key
gpg --export-secret-key -a "Bennett" > private.key
gpg --export-ownertrust > bennett-ownertrust-gpg.txt

# passwords from github
cd ~/.password-store/
echo "go to ~/.password-store and backup via git"
