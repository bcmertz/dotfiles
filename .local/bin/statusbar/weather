#!/usr/bin/env sh

location="41.8999,-74.7323"
amber='\e]4;1;rgb:FB/C0/2D\e\\\e[31m'

getforecast() {
    ping -q -c 1 1.1.1.1 >/dev/null 2>&1 || exit 1
    curl -s "wttr.in/$location?u" > "$HOME/.local/share/weatherreport" || exit 1 ;
}

showtemperature() {
    # current_weather=$(sed '3q;d' "$HOME/.local/share/weatherreport" | awk '{print $1}')
    # case $current_weather in
    #     Overcast)
    #         current_weather="îˆ«"
    #         ;;
    # esac

    # printf "$amber%s""$current_weather"

    sed '4q;d' "$HOME/.local/share/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print $1"Â°"}'
}

showweather() {
    printf "%s" "$(sed '16q;d' "$HOME/.local/share/weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/â˜” /g" | tr -d '\n')"
    sed '13q;d' "$HOME/.local/share/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " â„",$1 "Â°","ðŸŒž",$2 "Â°"}' ;
}

case $BLOCK_BUTTON in
    1) fullscreen "head -n -1 $HOME/.local/share/weatherreport; read" ;;
    2) getforecast && showweather ;;
    3) pgrep -x dunst >/dev/null && notify-send "ðŸŒˆ Weather module" "\- Left click for full forecast.
- Middle click to update forecast.
â˜”: Chance of rain/snow
â„: Daily low
ðŸŒž: Daily high" ;;
esac

if [ "$1" == "-t" ]; then
    getforecast && showtemperature
elif [ "$(stat -c %y "$HOME/.local/share/weatherreport" >/dev/null 2>&1 | awk '{print $1}')" != "$(date '+%Y-%m-%d')" ]; then
    getforecast && showweather
else
    showweather
fi
