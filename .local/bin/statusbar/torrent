#!/bin/sh

transmission-remote -l | grep % |
	sed " # The letters are for sorting and will not appear.
	s/.*Stopped.*/A 🛑/;
	s/.*Seeding.*/Z 🌱/;
	s/.*100%.*/N ✅/;
	s/.*Idle.*/B 🕰️/;
	s/.*Uploading.*/L ⬆️/;
	s/.*%.*/M ⬇️/" |
		sort -h | uniq -c | awk '{print $3 $1}' | paste -sd ' ' -

case $BLOCK_BUTTON in
	1) notify-send "Module shows number of torrents:
🛑: paused
🕰: idle (seeds needed)
🔼: uploading (unfinished)
🔽: downloading
✅: done
🌱: done and seeding" ;;
        3) floating "transmission-remote -l | less";;
esac
