#!/bin/bash
#
# edit configs

# array of configs
declare -a options=(
    "aliases - $HOME/.bash_aliases"
    "bash - $HOME/.bashrc"
    "vim - $HOME/.vimrc"
    "i3 - $HOME/.config/i3/config"
    "bspwm - $HOME/.config/bspwm/bspwmrc"
    "sxhkd - $HOME/.config/sxhkd/sxhkdrc"
    "dunst - $HOME/.config/dunst/dunstrc"
    "picom - $HOME/.config/picom/picom.conf"
    "polybar - $HOME/.config/polybar/config"
    "st - $HOME/coding/st/config.h"
)

chosen=$(printf '%s\n' "${options[@]}" | dmenu -i -l 20 -p 'Edit config:')
[ "$chosen" = "" ] && exit
cfg=$(printf '%s\n' "${chosen}" | awk '{print $NF}')
emacsclient --socket-name=gui "$cfg" && i3-msg "[class=Emacs] focus"
