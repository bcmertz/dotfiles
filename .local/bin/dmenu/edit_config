#!/bin/bash
#
# edit configs

# default dir
dir="$HOME/"

# configs
configs=".local/bin/
.config/
.emacs.d/lisp/
.bashrc
.coderc
.bash_aliases
.xprofile
.xinitrc
.bash_profile"

chosen=$(printf "$configs" | dmenu -c -i -l 20 -p 'Edit config:')
[ "$chosen" = "" ] && exit
cfg=$(realpath $chosen)

# while cfg is a directory
while [ -d "$cfg" ]
do
    # set dir to cfg path
    dir=$cfg
    # ls dir with trailing / and pipe to dmenu
    cfg=$(ls -Ap $cfg | dmenu -c -i -l 10 -p 'Edit config:')
    # if nothing is selected exit
    [ "$cfg" = "" ] && exit
    # set cfg to the fullpath
    cfg="$dir/$cfg"
done

# if there is an existing emacs frame open file in it, if not create a new frame
if_emacs_frame_exists "emacsclient --socket-name=gui $cfg" "emacsclient --socket-name=gui -c $cfg"
# focus emacs
i3-msg "[class=Emacs] focus"
