#!/bin/sh
#
# exit menu

options="matrix
lock
logout
exit i3
shutdown
reboot"

chosen=$(printf "$options" | dmenu -c -i -l 20 -p 'ðŸ‘‹:' -bw 3)
[ "$chosen" = "" ] && exit

case $chosen in
    matrix)
        fullscreen "cmatrix"
    ;;

    "exit i3")
        i3-msg exit
        ;;

    logout)
        pkill -9 -u leah
        ;;

    shutdown)
        shutdown now
        ;;

    lock)
        screenlock
        ;;

    reboot)
        shutdown -r now
    ;;

esac
