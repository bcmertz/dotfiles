#!/bin/sh
#
# exit menu

options="lock
logout
reboot
shutdown
exit i3
matrix
bonsai
pipes"

chosen=$(printf "$options" | dmenu -c -i -l 20 -p 'ðŸ‘‹:' -bw 3)
[ "$chosen" = "" ] && exit

case $chosen in
    pipes)
        pipes_screensaver
    ;;

    bonsai)
        fullscreen -D "cbonsai -lt 0.15 -i -w 2.0 -L 60"
    ;;

    matrix)
        fullscreen "cmatrix"
    ;;

    "exit i3")
        i3-msg exit
        ;;

    logout)
        pkill -9 -u reya
        ;;

    shutdown)
        shutdown now
        ;;

    lock)
        screenlock
        ;;

    reboot)
        shutdown -r now
    ;;

esac
