#!/bin/sh
#
# exit menu


locker() {
    # if we're running gnome screensaver use it if not use slock
    if pgrep -x "gnome-screensav" > /dev/null
    then
        gnome-screensaver-command -l
    else
        slock && sleep 1
    fi
}

options="lock
logout
shutdown
reboot"

chosen=$(printf "$options" | dmenu -c -i -l 20 -p 'ðŸ‘‹:' -bw 3)
[ "$chosen" = "" ] && exit

case $chosen in
    logout)
        i3-msg exit
        ;;

    shutdown)
        shutdown now
        ;;

    lock)
        locker
        ;;

    reboot)
        shutdown -r now
    ;;

esac
