#!/bin/bash
#
# Search arch-wiki or english wikipedia for articles


infoSource=$(printf "wiki\narch" | dmenu -i)
[ "$infoSource" != "" ] || exit

if [ "$infoSource" = "wiki" ]; then
    chosen=$(ls /usr/share/doc/wikipedia/docs/en | dmenu -i -l 20 -fn Monospace-18)
    [ "$chosen" != "" ] || exit
    firefox /usr/share/doc/arch-wiki/html/en/$chosen
else
    chosen=$(ls /usr/share/doc/arch-wiki/html/en | dmenu -i -l 20 -fn Monospace-18)
    [ "$chosen" != "" ] || exit
    firefox /usr/share/doc/arch-wiki/html/en/$chosen
fi
