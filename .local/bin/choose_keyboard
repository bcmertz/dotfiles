#!/bin/bash
#
#

chosen=$(localectl list-keymaps | dmenu -i -l 15)
[ "$chosen" = "" ] && exit
setxkbmap -layout us,$chosen -option grp:alt_shift_toggle
notify-send "YAY! You're typing in $chosen"

# check if i3 is running and launch relevant polybar config
