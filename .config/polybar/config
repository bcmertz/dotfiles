[module/filesystem]
type = custom/script
exec = disk / üìÅ
interval = 60
format = <label>
click-left = pgrep -x dunst >/dev/null && notify-send "üíΩ Disk space" "$(df -h / --output=target,used,size && echo -e '\nFolders' && du -sh * | sort -hr)"
click-right =  pgrep -x dunst >/dev/null && notify-send "üíΩ Disk module" "\- Shows used hard drive space.
- Click to show all disk info."

