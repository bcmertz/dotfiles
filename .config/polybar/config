################# colors ###################
[colors]
foreground = #ffffff
background = #3f000000

################ bars ######################

[bar/root]
font-0 = Mono:pixelsize=16
font-1 = NotoColorEmoji:scale=8
font-2 = UbuntuMono Nerd Font:size=24;7

border-top-size = 10
border-right-size = 10
border-left-size = 10
foreground = #ffffffff
fixed-center = true
background = #00000000
underline-size = 4
dpi = 133

radius = 15
height = 45
module-margin-left = 0
module-margin-right = 0
override-redirect = true


[bar/i3]
inherit = bar/root

tray-position = right
tray-detached = true
tray-maxsize = 32
tray-background = ${colors.background}
tray-offset-x = -15
tray-offset-y = 0
tray-radius = 15
tray-padding-left = 45
tray-scale = 1.0

modules-left = i3 weather language right1
modules-center = left1 date right1
modules-right = left1 network volume battery memory temp filesystem


[bar/bspwm]
inherit = bar/root

tray-position = right
tray-detached = true
tray-maxsize = 32
tray-background = ${colors.background}
tray-offset-x = -15
tray-offset-y = 0
tray-radius = 15
tray-padding-left = 45
tray-scale = 1.0

modules-left = bspwm weather language right1
modules-center = left1 date right1
modules-right = left1 network volume battery memory temp filesystem

##################### modules ######################################

[module/right1]
type = custom/text
content-background = "#00000000"
content-foreground = "#3f000000"
content = "%{T4}ÓÇ¥%{T-}"

[module/left1]
type = custom/text
content-background = "#00000000"
content-foreground = "#3f000000"
content = "%{T3}ÓÇ∂%{T-}"

[module/language]
type = custom/script
exec = language
format-background = ${colors.background}
format-foreground = ${colors.foreground}

radius = 15
format-padding = 1
interval = 1
click-left = notify-send "Language" "Alt-Shift to toggle\n\nMod+i to select a new language\n\nMod+Shift+i to query keymap";;
click-right = gkbd-keyboard-display -l ir;;

[module/memory]
type = custom/script
exec = memory
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
interval = 1
format = üß† <label>
click-left = notify-send "üß† Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)"
click-right = fullscreen htop

[module/battery]
type = custom/script
exec = battery BAT2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
click-left = notify-send "‚ö° Full üîå Charging üîã Discharging"
interval = 2
format = <label>

[module/temp]
type = custom/script
exec = cpu
interval = 1
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
format = üíª <label>
click-left = notify-send "üñ• CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)"
click-right = notify-send "üñ• CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)"

[module/network]
type = custom/script
exec = internet
interval = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
format = <label>
click-left = fullscreen nmtui

[module/volume]
type = custom/script
exec = volume
format-foreground = ${colors.foreground}
format-background = ${colors.background}
interval = 0.2
format = <label>

[module/date]
type = custom/script
exec = clock
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
interval = 10
format = <label>
click-left = gsimplecal
click-right = calendar

[module/weather]
type = custom/script
exec = weather
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
interval = 120
format = <label>
click-left = fullscreen "head -n -1 $HOME/.local/share/weatherreport; read" ;;

[module/filesystem]
type = custom/script
exec = disk / üìÅ
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1
interval = 60
format = <label>
click-left = pgrep -x dunst >/dev/null && notify-send "üíΩ Disk space" "$(df -h / --output=target,used,size && echo -e '\nFolders' && du -t 1M -sh .[!.]* * | sort -hr)"
click-right =  baobab

