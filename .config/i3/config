# resize window (you can also use the mouse for that)
set $resize_amt 2
mode "resize" {
        bindsym j resize shrink width $resize_amt px or $resize_amt ppt
        bindsym k resize grow height $resize_amt px or $resize_amt ppt
        bindsym l resize shrink height $resize_amt px or $resize_amt ppt
        bindsym semicolon resize grow width $resize_amt px or $resize_amt ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $resize_amt px or $resize_amt ppt
        bindsym Down resize grow height $resize_amt px or $resize_amt ppt
        bindsym Up resize shrink height $resize_amt px or $resize_amt ppt
        bindsym Right resize grow width $resize_amt px or $resize_amt ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"